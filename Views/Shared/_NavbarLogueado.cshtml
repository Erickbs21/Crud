                        <a class="nav-link dropdown-toggle text-white" href="#" id="apiDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-cloud me-1"></i> APIs
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="apiDropdown">
                            <li>
                                <a class="dropdown-item" asp-controller="Api" asp-action="Rest">
                                    <i class="bi bi-arrow-repeat me-1"></i> API REST
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Api" asp-action="Soap">
                                    <i class="bi bi-envelope me-1"></i> API SOAP
                                </a>
